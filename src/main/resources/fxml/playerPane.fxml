<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import net.kyma.gui.PlayButton?>
<?import net.kyma.gui.StopButton?>
<?import javafx.geometry.Insets?>
<GridPane hgap="5" vgap="5"
          xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="net.kyma.gui.controllers.PlayerPaneController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="20.0"/>
        <ColumnConstraints hgrow="SOMETIMES" percentWidth="80.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints valignment="CENTER"/>
    </rowConstraints>
    <padding>
        <Insets top="10" left="10" right="10"/>
    </padding>
    <HBox spacing="5">
        <PlayButton fx:id="playButton" styleClass="roundButton" onAction="#startOrPause"/>
        <StopButton styleClass="roundButton" onAction="#stop"/>
    </HBox>
    <Slider GridPane.columnIndex="1" fx:id="playbackProgress"
            onMousePressed="#stopTimer" onMouseReleased="#playFrom"/>
</GridPane>
