<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<SplitPane dividerPositions="0.4" prefHeight="300.0" prefWidth="600.0" stylesheets="@LightTheme.css"
           AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
           AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/8.0.112-ea" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="net.kyma.mcichon.view.controllers.MusicOverviewController">
    <items>
        <TableView fx:id="songTable" layoutX="-12.0" layoutY="49.0" prefHeight="300.0" prefWidth="175.0"
                   AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                   AnchorPane.topAnchor="0.0">
            <columns>
                <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name"/>
                <TableColumn fx:id="timeColumn" prefWidth="75.0" text="Time"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <GridPane layoutX="42.0" layoutY="88.0" prefHeight="62.0" prefWidth="346.0" AnchorPane.leftAnchor="5.0"
                  AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="88.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <padding>
                <Insets left="10" right="10" top="10" bottom="10"/>
            </padding>
            <Label styleClass="label-header" text="Mp3FX"/>
            <Label text="Song name" GridPane.rowIndex="1"/>
            <Label text="Song time" GridPane.rowIndex="2"/>
            <Label fx:id="nameLabel" styleClass="label-bright" text="Label" GridPane.columnIndex="1"
                   GridPane.rowIndex="1"/>
            <Label fx:id="timeLabel" styleClass="label-bright" text="Label" GridPane.columnIndex="1"
                   GridPane.rowIndex="2"/>
            <HBox GridPane.rowIndex="3" GridPane.columnSpan="2" maxWidth="Infinity" GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS">
                <Button onAction="#handleNewItem" text="New" maxWidth="Infinity" maxHeight="Infinity"/>
                <Button onAction="#handleEditItem" text="Edit" maxWidth="Infinity" maxHeight="Infinity"/>
                <Button onAction="#handleDeleteItem" text="Delete" maxWidth="Infinity" maxHeight="Infinity"/>
            </HBox>
        </GridPane>
    </items>
</SplitPane>
